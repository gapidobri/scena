generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())

  ratings Rating[]
  videos  Video[]
}

model Video {
  id String @id @default(uuid())

  title       String
  description String?
  url         String

  thumbnailUrl String?
  ratings      Rating[]

  user   User   @relation(fields: [userId], references: [id])
  userId String
}

enum RatingType {
  like
  dislike
}

model Rating {
  user   User   @relation(fields: [userId], references: [id])
  userId String

  video   Video  @relation(fields: [videoId], references: [id])
  videoId String

  type RatingType

  @@id([userId, videoId])
}
